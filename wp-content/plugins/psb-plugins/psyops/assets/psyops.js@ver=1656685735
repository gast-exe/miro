(function(){function main(){const container=document.getElementById('psyops-container');if(container){const url=new URL(location.href);const ip=url.searchParams.has('simulated_ip')?`&simulated_ip=${url.searchParams.get('simulated_ip')}`:'';fetch(`${psyOpsSettings.ajaxUrl}?action=psyops_message${ip}`,{method:'GET',}).then((r)=>r.ok?r.json():Promise.resolve({})).then((json)=>{if(json.success&&json.data&&json.data.message){const html=`<div style="background: #FFD500; border-radius: .5rem; margin: 1rem; padding: 1em; font-weight: bold; font-size: 2rem; line-height: 1.5">${json.data.message}</div>`;container.insertAdjacentHTML('beforeend',html);}}).catch((e)=>{console.error(e);})}}
if(document.readyState==='loading'){document.addEventListener('DOMContentLoaded',main);}else{main();}})();